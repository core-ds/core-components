{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": [
        ".eslintrc.cjs",
        "bin",
        "bin/.eslintrc.cjs",
        "commitlint.config.ts",
        "jest.config.mjs",
        "jest.screenshots.config.mjs",
        "lint-staged.config.mjs",
        "playwright.config.js",
        "rollup.config.mjs",
        "tools",
        "tools/.eslintrc.cjs",
        "tools/gh-actions/.eslintrc.cjs"
    ],
    "compilerOptions": {
        "lib": ["es2022"],
        "module": "nodenext",
        "target": "es2022",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "node16",

        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "noEmit": true,
        "allowJs": true
    }
}
