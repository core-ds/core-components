{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "outDir": "build",
        "module": "commonjs",
        "skipLibCheck": true,
        "sourceMap": true,
        "jsx": "react",
        "rootDirs": ["packages"],
        "baseUrl": "./",
        "paths": {
            "@alfalab/core-components-*": ["packages/*/src"]
        }
    },
    "exclude": ["node_modules", "build", "coverage"]
}
