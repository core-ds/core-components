{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-calendar": ["../calendar/src"],
            "@balafla/core-components-calendar/*": ["../calendar/src/*"],
            "@balafla/core-components-date-input": ["../date-input/src"],
            "@balafla/core-components-date-input/*": ["../date-input/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-popover": ["../popover/src"],
            "@balafla/core-components-popover/*": ["../popover/src/*"]
        }
    },
    "references": [
        { "path": "../calendar" },
        { "path": "../date-input" },
        { "path": "../mq" },
        { "path": "../popover" }
    ]
}
