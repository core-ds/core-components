{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-button": ["../button/src"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-pagination": ["../pagination/src"],
            "@balafla/core-components-pagination/*": ["../pagination/src/*"],
            "@balafla/core-components-select": ["../select/src"],
            "@balafla/core-components-select/*": ["../select/src/*"]
        }
    },
    "references": [{ "path": "../button" }, { "path": "../pagination" }, { "path": "../select" }]
}
