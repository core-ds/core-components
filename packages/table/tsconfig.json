{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-*": ["../*/src"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-pagination/*": ["../pagination/src/*"],
            "@alfalab/core-components-select/*": ["../select/src/*"]
        }
    },
    "references": [{ "path": "../button" }, { "path": "../pagination" }, { "path": "../select" }]
}
