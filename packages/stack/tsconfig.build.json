{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-stack": ["./src"],
            "@alfalab/core-components-stack/*": ["./src/*"],
            "@alfalab/core-components-stack-context": ["../stack-context/src"],
            "@alfalab/core-components-stack-context/*": ["../stack-context/src/*"]
        }
    },
    "references": [{ "path": "../stack-context/tsconfig.build.json" }]
}
