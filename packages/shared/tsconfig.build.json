{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-shared": ["./src"],
            "@alfalab/core-components-shared/*": ["./src/*"],
            "@alfalab/core-components-types": ["../types/src"],
            "@alfalab/core-components-types/*": ["../types/src/*"],
            "@alfalab/core-components-vars": ["../vars/src"],
            "@alfalab/core-components-vars/*": ["../vars/src/*"],
            "@alfalab/core-components-themes": ["../themes/src"],
            "@alfalab/core-components-themes/*": ["../themes/src/*"]
        }
    },
    "references": [
        { "path": "../types/tsconfig.build.json" },
        { "path": "../vars/tsconfig.build.json" },
        { "path": "../themes/tsconfig.build.json" }
    ]
}
