{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-*": ["../*/src"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-code-input/*": ["../code-input/src/*"],
            "@alfalab/core-components-link/*": ["../link/src/*"],
            "@alfalab/core-components-mq/*": ["../mq/src/*"],
            "@alfalab/core-components-shared/*": ["../shared/src/*"],
            "@alfalab/core-components-spinner/*": ["../spinner/src/*"],
            "@alfalab/core-components-typography/*": ["../typography/src/*"]
        }
    },
    "references": [
        { "path": "../button" },
        { "path": "../code-input" },
        { "path": "../link" },
        { "path": "../mq" },
        { "path": "../shared" },
        { "path": "../spinner" },
        { "path": "../typography" }
    ]
}
