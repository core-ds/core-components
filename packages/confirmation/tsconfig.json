{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-button": ["../button/src"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-code-input": ["../code-input/src"],
            "@balafla/core-components-code-input/*": ["../code-input/src/*"],
            "@balafla/core-components-link": ["../link/src"],
            "@balafla/core-components-link/*": ["../link/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-spinner": ["../spinner/src"],
            "@balafla/core-components-spinner/*": ["../spinner/src/*"],
            "@balafla/core-components-typography": ["../typography/src"],
            "@balafla/core-components-typography/*": ["../typography/src/*"]
        }
    },
    "references": [
        { "path": "../button" },
        { "path": "../code-input" },
        { "path": "../link" },
        { "path": "../mq" },
        { "path": "../spinner" },
        { "path": "../typography" }
    ]
}
