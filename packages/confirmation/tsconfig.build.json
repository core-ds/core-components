{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-button": ["../button/src"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-code-input": ["../code-input/src"],
            "@alfalab/core-components-code-input/*": ["../code-input/src/*"],
            "@alfalab/core-components-confirmation": ["./src"],
            "@alfalab/core-components-confirmation/*": ["./src/*"],
            "@alfalab/core-components-link": ["../link/src"],
            "@alfalab/core-components-link/*": ["../link/src/*"],
            "@alfalab/core-components-mq": ["../mq/src"],
            "@alfalab/core-components-mq/*": ["../mq/src/*"],
            "@alfalab/core-components-spinner": ["../spinner/src"],
            "@alfalab/core-components-spinner/*": ["../spinner/src/*"],
            "@alfalab/core-components-typography": ["../typography/src"],
            "@alfalab/core-components-typography/*": ["../typography/src/*"]
        }
    },
    "references": [
        { "path": "../button/tsconfig.build.json" },
        { "path": "../code-input/tsconfig.build.json" },
        { "path": "../link/tsconfig.build.json" },
        { "path": "../mq/tsconfig.build.json" },
        { "path": "../spinner/tsconfig.build.json" },
        { "path": "../typography/tsconfig.build.json" }
    ]
}
