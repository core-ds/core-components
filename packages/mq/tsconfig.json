{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "src/**/*.json", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-config": ["../config/src"],
            "@balafla/core-components-config/*": ["../config/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"]
        }
    },
    "references": [{ "path": "../config" }, { "path": "../shared" }]
}
