{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-badge": ["../badge/src"],
            "@balafla/core-components-badge/*": ["../badge/src/*"],
            "@balafla/core-components-icon-button": ["../icon-button/src"],
            "@balafla/core-components-icon-button/*": ["../icon-button/src/*"],
            "@balafla/core-components-keyboard-focusable": ["../keyboard-focusable/src"],
            "@balafla/core-components-keyboard-focusable/*": ["../keyboard-focusable/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-picker-button": ["../picker-button/src"],
            "@balafla/core-components-picker-button/*": ["../picker-button/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"],
            "@balafla/core-components-skeleton": ["../skeleton/src"],
            "@balafla/core-components-skeleton/*": ["../skeleton/src/*"],
            "@balafla/core-components-tag": ["../tag/src"],
            "@balafla/core-components-tag/*": ["../tag/src/*"]
        }
    },
    "references": [
        { "path": "../badge" },
        { "path": "../icon-button" },
        { "path": "../keyboard-focusable" },
        { "path": "../mq" },
        { "path": "../picker-button" },
        { "path": "../shared" },
        { "path": "../skeleton" },
        { "path": "../tag" }
    ]
}
