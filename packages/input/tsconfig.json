{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-button": ["../button/src"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-form-control": ["../form-control/src"],
            "@balafla/core-components-form-control/*": ["../form-control/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"],
            "@balafla/core-components-status-badge": ["../status-badge/src"],
            "@balafla/core-components-status-badge/*": ["../status-badge/src/*"]
        }
    },
    "references": [
        { "path": "../button" },
        { "path": "../form-control" },
        { "path": "../mq" },
        { "path": "../shared" },
        { "path": "../status-badge" }
    ]
}
