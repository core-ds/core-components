    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-icon-button": ["../icon-button/src"],
            "@balafla/core-components-icon-button/*": ["../icon-button/src/*"],
            "@balafla/core-components-icon-view": ["../icon-view/src"],
