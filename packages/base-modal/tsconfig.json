{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-*": ["../*/src"],
            "@alfalab/core-components-backdrop/*": ["../backdrop/src/*"],
            "@alfalab/core-components-global-store/*": ["../global-store/src/*"],
            "@alfalab/core-components-portal/*": ["../portal/src/*"],
            "@alfalab/core-components-shared/*": ["../shared/src/*"],
            "@alfalab/core-components-stack/*": ["../stack/src/*"]
        }
    },
    "references": [
        { "path": "../backdrop" },
        { "path": "../global-store" },
        { "path": "../portal" },
        { "path": "../shared" },
        { "path": "../stack" }
    ]
}
