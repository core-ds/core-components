{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"],
            "@balafla/core-components-spinner": ["../spinner/src"],
            "@balafla/core-components-spinner/*": ["../spinner/src/*"]
        }
    },
    "references": [{ "path": "../shared" }, { "path": "../spinner" }]
}
