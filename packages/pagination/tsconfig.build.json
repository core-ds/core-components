{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-pagination": ["./src"],
            "@alfalab/core-components-pagination/*": ["./src/*"],
            "@alfalab/core-components-tag": ["../tag/src"],
            "@alfalab/core-components-tag/*": ["../tag/src/*"]
        }
    },
    "references": [{ "path": "../tag/tsconfig.build.json" }]
}
