{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-link": ["../link/src"],
            "@balafla/core-components-link/*": ["../link/src/*"],
            "@balafla/core-components-list": ["../list/src"],
            "@balafla/core-components-list/*": ["../list/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-typography": ["../typography/src"],
            "@balafla/core-components-typography/*": ["../typography/src/*"]
        }
    },
    "references": [
        { "path": "../link" },
        { "path": "../list" },
        { "path": "../mq" },
        { "path": "../typography" }
    ]
}
