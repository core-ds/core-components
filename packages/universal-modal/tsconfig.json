{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-*": ["../*/src"],
            "@alfalab/core-components-backdrop/*": ["../backdrop/src/*"],
            "@alfalab/core-components-base-modal/*": ["../base-modal/src/*"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-mq/*": ["../mq/src/*"],
            "@alfalab/core-components-navigation-bar-private/*": [
                "../navigation-bar-private/src/*"
            ],
            "@alfalab/core-components-scrollbar/*": ["../scrollbar/src/*"],
            "@alfalab/core-components-shared/*": ["../shared/src/*"],
            "@alfalab/core-components-typography/*": ["../typography/src/*"]
        }
    },
    "references": [
        { "path": "../backdrop" },
        { "path": "../base-modal" },
        { "path": "../button" },
        { "path": "../mq" },
        { "path": "../navigation-bar-private" },
        { "path": "../scrollbar" },
        { "path": "../shared" },
        { "path": "../typography" }
    ]
}
