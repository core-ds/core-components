{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "@alfalab/core-components-backdrop": ["../backdrop/src"],
            "@alfalab/core-components-backdrop/*": ["../backdrop/src/*"],
            "@alfalab/core-components-base-modal": ["../base-modal/src"],
            "@alfalab/core-components-base-modal/*": ["../base-modal/src/*"],
            "@alfalab/core-components-button": ["../button/src"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-mq": ["../mq/src"],
            "@alfalab/core-components-mq/*": ["../mq/src/*"],
            "@alfalab/core-components-navigation-bar-private": ["../navigation-bar-private/src"],
            "@alfalab/core-components-navigation-bar-private/*": [
                "../navigation-bar-private/src/*"
            ],
            "@alfalab/core-components-screenshot-utils": ["../screenshot-utils/src"],
            "@alfalab/core-components-screenshot-utils/*": ["../screenshot-utils/src/*"],
            "@alfalab/core-components-scrollbar": ["../scrollbar/src"],
            "@alfalab/core-components-scrollbar/*": ["../scrollbar/src/*"],
            "@alfalab/core-components-shared": ["../shared/src"],
            "@alfalab/core-components-shared/*": ["../shared/src/*"],
            "@alfalab/core-components-test-utils": ["../test-utils/src"],
            "@alfalab/core-components-test-utils/*": ["../test-utils/src/*"],
            "@alfalab/core-components-typography": ["../typography/src"],
            "@alfalab/core-components-typography/*": ["../typography/src/*"],
            "@alfalab/core-components-universal-modal": ["./src"],
            "@alfalab/core-components-universal-modal/*": ["./src/*"]
        }
    },
    "references": [
        { "path": "../backdrop" },
        { "path": "../base-modal" },
        { "path": "../button" },
        { "path": "../mq" },
        { "path": "../navigation-bar-private" },
        { "path": "../screenshot-utils" },
        { "path": "../scrollbar" },
        { "path": "../shared" },
        { "path": "../test-utils" },
        { "path": "../typography" }
    ]
}
