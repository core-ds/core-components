{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-badge": ["../badge/src"],
            "@alfalab/core-components-badge/*": ["../badge/src/*"],
            "@alfalab/core-components-shared": ["../shared/src"],
            "@alfalab/core-components-shared/*": ["../shared/src/*"],
            "@alfalab/core-components-steps": ["./src"],
            "@alfalab/core-components-steps/*": ["./src/*"]
        }
    },
    "references": [
        { "path": "../badge/tsconfig.build.json" },
        { "path": "../shared/tsconfig.build.json" }
    ]
}
