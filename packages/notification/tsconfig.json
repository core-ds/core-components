{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-portal": ["../portal/src"],
            "@balafla/core-components-portal/*": ["../portal/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"],
            "@balafla/core-components-stack": ["../stack/src"],
            "@balafla/core-components-stack/*": ["../stack/src/*"],
            "@balafla/core-components-stack-context": ["../stack-context/src"],
            "@balafla/core-components-stack-context/*": ["../stack-context/src/*"],
            "@balafla/core-components-toast-plate": ["../toast-plate/src"],
            "@balafla/core-components-toast-plate/*": ["../toast-plate/src/*"]
        }
    },
    "references": [
        { "path": "../portal" },
        { "path": "../shared" },
        { "path": "../stack" },
        { "path": "../stack-context" },
        { "path": "../toast-plate" }
    ]
}
