{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-*": ["../*/src"],
            "@alfalab/core-components-portal/*": ["../portal/src/*"],
            "@alfalab/core-components-stack/*": ["../stack/src/*"],
            "@alfalab/core-components-toast-plate/*": ["../toast-plate/src/*"]
        }
    },
    "references": [{ "path": "../portal" }, { "path": "../stack" }, { "path": "../toast-plate" }]
}
