{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-*": ["../*/src"],
            "@alfalab/core-components-notification/*": ["../notification/src/*"],
            "@alfalab/core-components-portal/*": ["../portal/src/*"],
            "@alfalab/core-components-stack/*": ["../stack/src/*"]
        }
    },
    "references": [{ "path": "../notification" }, { "path": "../portal" }, { "path": "../stack" }]
}
