{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-button": ["../button/src"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-popover": ["../popover/src"],
            "@balafla/core-components-popover/*": ["../popover/src/*"],
            "@balafla/core-components-select": ["../select/src"],
            "@balafla/core-components-select/*": ["../select/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"]
        }
    },
    "references": [
        { "path": "../button" },
        { "path": "../mq" },
        { "path": "../popover" },
        { "path": "../select" },
        { "path": "../shared" }
    ]
}
