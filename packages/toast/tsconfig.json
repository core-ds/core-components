{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "no-dist",
        "paths": {
            "@alfalab/core-components-mq": ["../mq/src"],
            "@alfalab/core-components-mq/*": ["../mq/src/*"],
            "@alfalab/core-components-popover": ["../popover/src"],
            "@alfalab/core-components-popover/*": ["../popover/src/*"],
            "@alfalab/core-components-portal": ["../portal/src"],
            "@alfalab/core-components-portal/*": ["../portal/src/*"],
            "@alfalab/core-components-screenshot-utils": ["../screenshot-utils/src"],
            "@alfalab/core-components-screenshot-utils/*": ["../screenshot-utils/src/*"],
            "@alfalab/core-components-shared": ["../shared/src"],
            "@alfalab/core-components-shared/*": ["../shared/src/*"],
            "@alfalab/core-components-stack": ["../stack/src"],
            "@alfalab/core-components-stack/*": ["../stack/src/*"],
            "@alfalab/core-components-stack-context": ["../stack-context/src"],
            "@alfalab/core-components-stack-context/*": ["../stack-context/src/*"],
            "@alfalab/core-components-test-utils": ["../test-utils/src"],
            "@alfalab/core-components-test-utils/*": ["../test-utils/src/*"],
            "@alfalab/core-components-toast": ["./src"],
            "@alfalab/core-components-toast/*": ["./src/*"],
            "@alfalab/core-components-toast-plate": ["../toast-plate/src"],
            "@alfalab/core-components-toast-plate/*": ["../toast-plate/src/*"]
        }
    },
    "references": [
        { "path": "../mq/tsconfig.build.json" },
        { "path": "../popover/tsconfig.build.json" },
        { "path": "../portal/tsconfig.build.json" },
        { "path": "../screenshot-utils/tsconfig.build.json" },
        { "path": "../shared/tsconfig.build.json" },
        { "path": "../stack/tsconfig.build.json" },
        { "path": "../stack-context/tsconfig.build.json" },
        { "path": "../test-utils/tsconfig.build.json" },
        { "path": "../toast-plate/tsconfig.build.json" }
    ]
}
