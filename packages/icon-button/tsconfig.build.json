{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-button": ["../button/src"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-icon-button": ["./src"],
            "@alfalab/core-components-icon-button/*": ["./src/*"]
        }
    },
    "references": [{ "path": "../button/tsconfig.build.json" }]
}
