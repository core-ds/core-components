{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-masked-input": ["../masked-input/src"],
            "@alfalab/core-components-masked-input/*": ["../masked-input/src/*"],
            "@alfalab/core-components-phone-input": ["./src"],
            "@alfalab/core-components-phone-input/*": ["./src/*"]
        }
    },
    "references": [{ "path": "../masked-input/tsconfig.build.json" }]
}
