{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "types": [
            "@alfalab/core-components-env",
            "@testing-library/jest-dom",
            "@types/webpack-env"
        ],
        "paths": {
            "storybook/*": ["../../.storybook/*"],
            "@alfalab/core-components-screenshot-utils": ["./src"],
            "@alfalab/core-components-screenshot-utils/*": ["./src/*"],
            "@alfalab/core-components-test-utils": ["../test-utils/src"],
            "@alfalab/core-components-test-utils/*": ["../test-utils/src/*"]
        }
    },
    "references": [{ "path": "../../.storybook" }, { "path": "../test-utils" }]
}
