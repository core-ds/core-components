{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "@alfalab/core-components-attach": ["./src"],
            "@alfalab/core-components-attach/*": ["./src/*"],
            "@alfalab/core-components-button": ["../button/src"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-keyboard-focusable": ["../keyboard-focusable/src"],
            "@alfalab/core-components-keyboard-focusable/*": ["../keyboard-focusable/src/*"],
            "@alfalab/core-components-progress-bar": ["../progress-bar/src"],
            "@alfalab/core-components-progress-bar/*": ["../progress-bar/src/*"],
            "@alfalab/core-components-screenshot-utils": ["../screenshot-utils/src"],
            "@alfalab/core-components-screenshot-utils/*": ["../screenshot-utils/src/*"],
            "@alfalab/core-components-test-utils": ["../test-utils/src"],
            "@alfalab/core-components-test-utils/*": ["../test-utils/src/*"]
        }
    },
    "references": [
        { "path": "../button" },
        { "path": "../keyboard-focusable" },
        { "path": "../progress-bar" },
        { "path": "../screenshot-utils" },
        { "path": "../test-utils" }
    ]
}
