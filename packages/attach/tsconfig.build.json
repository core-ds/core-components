{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-attach": ["./src"],
            "@alfalab/core-components-attach/*": ["./src/*"],
            "@alfalab/core-components-button": ["../button/src"],
            "@alfalab/core-components-button/*": ["../button/src/*"],
            "@alfalab/core-components-keyboard-focusable": ["../keyboard-focusable/src"],
            "@alfalab/core-components-keyboard-focusable/*": ["../keyboard-focusable/src/*"],
            "@alfalab/core-components-progress-bar": ["../progress-bar/src"],
            "@alfalab/core-components-progress-bar/*": ["../progress-bar/src/*"]
        }
    },
    "references": [
        { "path": "../button/tsconfig.build.json" },
        { "path": "../keyboard-focusable/tsconfig.build.json" },
        { "path": "../progress-bar/tsconfig.build.json" }
    ]
}
