{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-filter-tag": ["./src"],
            "@alfalab/core-components-filter-tag/*": ["./src/*"],
            "@alfalab/core-components-mq": ["../mq/src"],
            "@alfalab/core-components-mq/*": ["../mq/src/*"]
        }
    },
    "references": [{ "path": "../mq/tsconfig.build.json" }]
}
