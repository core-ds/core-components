{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-bottom-sheet": ["../bottom-sheet/src"],
            "@balafla/core-components-bottom-sheet/*": ["../bottom-sheet/src/*"],
            "@balafla/core-components-form-control": ["../form-control/src"],
            "@balafla/core-components-form-control/*": ["../form-control/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-popover": ["../popover/src"],
            "@balafla/core-components-popover/*": ["../popover/src/*"],
            "@balafla/core-components-select": ["../select/src"],
            "@balafla/core-components-select/*": ["../select/src/*"],
            "@balafla/core-components-tag": ["../tag/src"],
            "@balafla/core-components-tag/*": ["../tag/src/*"]
        }
    },
    "references": [
        { "path": "../bottom-sheet" },
        { "path": "../form-control" },
        { "path": "../mq" },
        { "path": "../popover" },
        { "path": "../select" },
        { "path": "../tag" }
    ]
}
