{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-badge": ["../badge/src"],
            "@balafla/core-components-badge/*": ["../badge/src/*"],
            "@balafla/core-components-base-modal": ["../base-modal/src"],
            "@balafla/core-components-base-modal/*": ["../base-modal/src/*"],
            "@balafla/core-components-bottom-sheet": ["../bottom-sheet/src"],
            "@balafla/core-components-bottom-sheet/*": ["../bottom-sheet/src/*"],
            "@balafla/core-components-button": ["../button/src"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-checkbox": ["../checkbox/src"],
            "@balafla/core-components-checkbox/*": ["../checkbox/src/*"],
            "@balafla/core-components-form-control": ["../form-control/src"],
            "@balafla/core-components-form-control/*": ["../form-control/src/*"],
            "@balafla/core-components-input": ["../input/src"],
            "@balafla/core-components-input/*": ["../input/src/*"],
            "@balafla/core-components-modal": ["../modal/src"],
            "@balafla/core-components-modal/*": ["../modal/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-popover": ["../popover/src"],
            "@balafla/core-components-popover/*": ["../popover/src/*"],
            "@balafla/core-components-scrollbar": ["../scrollbar/src"],
            "@balafla/core-components-scrollbar/*": ["../scrollbar/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"],
            "@balafla/core-components-skeleton": ["../skeleton/src"],
            "@balafla/core-components-skeleton/*": ["../skeleton/src/*"]
        }
    },
    "references": [
        { "path": "../badge" },
        { "path": "../base-modal" },
        { "path": "../bottom-sheet" },
        { "path": "../button" },
        { "path": "../checkbox" },
        { "path": "../form-control" },
        { "path": "../input" },
        { "path": "../modal" },
        { "path": "../mq" },
        { "path": "../popover" },
        { "path": "../scrollbar" },
        { "path": "../shared" },
        { "path": "../skeleton" }
    ]
}
