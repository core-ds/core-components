{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-button": ["../button/src"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-link": ["../link/src"],
            "@balafla/core-components-link/*": ["../link/src/*"],
            "@balafla/core-components-loader": ["../loader/src"],
            "@balafla/core-components-loader/*": ["../loader/src/*"]
        }
    },
    "references": [{ "path": "../button" }, { "path": "../link" }, { "path": "../loader" }]
}
