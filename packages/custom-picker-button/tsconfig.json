{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-custom-button": ["../custom-button/src"],
            "@balafla/core-components-custom-button/*": ["../custom-button/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-picker-button": ["../picker-button/src"],
            "@balafla/core-components-picker-button/*": ["../picker-button/src/*"],
            "@balafla/core-components-select": ["../select/src"],
            "@balafla/core-components-select/*": ["../select/src/*"]
        }
    },
    "references": [
        { "path": "../custom-button" },
        { "path": "../mq" },
        { "path": "../picker-button" },
        { "path": "../select" }
    ]
}
