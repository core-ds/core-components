{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-base-modal": ["../base-modal/src"],
            "@balafla/core-components-base-modal/*": ["../base-modal/src/*"],
            "@balafla/core-components-icon-button": ["../icon-button/src"],
            "@balafla/core-components-icon-button/*": ["../icon-button/src/*"],
            "@balafla/core-components-icon-view": ["../icon-view/src"],
            "@balafla/core-components-icon-view/*": ["../icon-view/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-spinner": ["../spinner/src"],
            "@balafla/core-components-spinner/*": ["../spinner/src/*"],
            "@balafla/core-components-tooltip": ["../tooltip/src"],
            "@balafla/core-components-tooltip/*": ["../tooltip/src/*"],
            "@balafla/core-components-typography": ["../typography/src"],
            "@balafla/core-components-typography/*": ["../typography/src/*"]
        }
    },
    "references": [
        { "path": "../base-modal" },
        { "path": "../icon-button" },
        { "path": "../icon-view" },
        { "path": "../mq" },
        { "path": "../spinner" },
        { "path": "../tooltip" },
        { "path": "../typography" }
    ]
}
