{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-button": ["../button/src"],
            "@balafla/core-components-button/*": ["../button/src/*"],
            "@balafla/core-components-gap": ["../gap/src"],
            "@balafla/core-components-gap/*": ["../gap/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"]
        }
    },
    "references": [{ "path": "../button" }, { "path": "../gap" }, { "path": "../shared" }]
}
