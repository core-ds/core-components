{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-input": ["../input/src"],
            "@balafla/core-components-input/*": ["../input/src/*"],
            "@balafla/core-components-input-autocomplete": ["../input-autocomplete/src"],
            "@balafla/core-components-input-autocomplete/*": ["../input-autocomplete/src/*"],
            "@balafla/core-components-mq": ["../mq/src"],
            "@balafla/core-components-mq/*": ["../mq/src/*"],
            "@balafla/core-components-select": ["../select/src"],
            "@balafla/core-components-select/*": ["../select/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"],
            "@balafla/core-components-types": ["../types/src"],
            "@balafla/core-components-types/*": ["../types/src/*"]
        }
    },
    "references": [
        { "path": "../input" },
        { "path": "../input-autocomplete" },
        { "path": "../mq" },
        { "path": "../select" },
        { "path": "../shared" },
        { "path": "../types" }
    ]
}
