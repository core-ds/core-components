{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-portal": ["../portal/src"],
            "@balafla/core-components-portal/*": ["../portal/src/*"],
            "@balafla/core-components-stack": ["../stack/src"],
            "@balafla/core-components-stack/*": ["../stack/src/*"],
            "@balafla/core-components-stack-context": ["../stack-context/src"],
            "@balafla/core-components-stack-context/*": ["../stack-context/src/*"]
        }
    },
    "references": [{ "path": "../portal" }, { "path": "../stack" }, { "path": "../stack-context" }]
}
