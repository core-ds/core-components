{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@alfalab/core-components-*": ["../*/src"],
            "@alfalab/core-components-icon-button/*": ["../icon-button/src/*"],
            "@alfalab/core-components-link/*": ["../link/src/*"],
            "@alfalab/core-components-spinner/*": ["../spinner/src/*"]
        }
    },
    "references": [{ "path": "../icon-button" }, { "path": "../link" }, { "path": "../spinner" }]
}
