{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-icon-button": ["../icon-button/src"],
            "@balafla/core-components-icon-button/*": ["../icon-button/src/*"],
            "@balafla/core-components-link": ["../link/src"],
            "@balafla/core-components-link/*": ["../link/src/*"],
            "@balafla/core-components-spinner": ["../spinner/src"],
            "@balafla/core-components-spinner/*": ["../spinner/src/*"]
        }
    },
    "references": [{ "path": "../icon-button" }, { "path": "../link" }, { "path": "../spinner" }]
}
