{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "@alfalab/core-components-calendar": ["../calendar/src"],
            "@alfalab/core-components-calendar/*": ["../calendar/src/*"],
            "@alfalab/core-components-calendar-input": ["../calendar-input/src"],
            "@alfalab/core-components-calendar-input/*": ["../calendar-input/src/*"],
            "@alfalab/core-components-calendar-range": ["./src"],
            "@alfalab/core-components-calendar-range/*": ["./src/*"],
            "@alfalab/core-components-date-input": ["../date-input/src"],
            "@alfalab/core-components-date-input/*": ["../date-input/src/*"],
            "@alfalab/core-components-screenshot-utils": ["../screenshot-utils/src"],
            "@alfalab/core-components-screenshot-utils/*": ["../screenshot-utils/src/*"],
            "@alfalab/core-components-shared": ["../shared/src"],
            "@alfalab/core-components-shared/*": ["../shared/src/*"],
            "@alfalab/core-components-test-utils": ["../test-utils/src"],
            "@alfalab/core-components-test-utils/*": ["../test-utils/src/*"]
        }
    },
    "references": [
        { "path": "../calendar" },
        { "path": "../calendar-input" },
        { "path": "../date-input" },
        { "path": "../screenshot-utils" },
        { "path": "../shared" },
        { "path": "../test-utils" }
    ]
}
