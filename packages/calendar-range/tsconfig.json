{
    "$schema": "https://json.schemastore.org/tsconfig",
    "include": ["src", "../../typings"],
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "rootDir": "src",
        "paths": {
            "@balafla/core-components-calendar": ["../calendar/src"],
            "@balafla/core-components-calendar/*": ["../calendar/src/*"],
            "@balafla/core-components-calendar-input": ["../calendar-input/src"],
            "@balafla/core-components-calendar-input/*": ["../calendar-input/src/*"],
            "@balafla/core-components-date-input": ["../date-input/src"],
            "@balafla/core-components-date-input/*": ["../date-input/src/*"],
            "@balafla/core-components-shared": ["../shared/src"],
            "@balafla/core-components-shared/*": ["../shared/src/*"]
        }
    },
    "references": [
        { "path": "../calendar" },
        { "path": "../calendar-input" },
        { "path": "../date-input" },
        { "path": "../shared" }
    ]
}
