{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "@alfalab/core-components-env/tsconfig.base.json",
    "include": ["src", "src/**/*.json"],
    "exclude": ["**/*.stories.*", "**/*.test.*"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "ts-dist",
        "paths": {
            "@alfalab/core-components-calendar": ["../calendar/src"],
            "@alfalab/core-components-calendar/*": ["../calendar/src/*"],
            "@alfalab/core-components-calendar-input": ["../calendar-input/src"],
            "@alfalab/core-components-calendar-input/*": ["../calendar-input/src/*"],
            "@alfalab/core-components-calendar-range": ["./src"],
            "@alfalab/core-components-calendar-range/*": ["./src/*"],
            "@alfalab/core-components-date-input": ["../date-input/src"],
            "@alfalab/core-components-date-input/*": ["../date-input/src/*"],
            "@alfalab/core-components-shared": ["../shared/src"],
            "@alfalab/core-components-shared/*": ["../shared/src/*"]
        }
    },
    "references": [
        { "path": "../calendar/tsconfig.build.json" },
        { "path": "../calendar-input/tsconfig.build.json" },
        { "path": "../date-input/tsconfig.build.json" },
        { "path": "../shared/tsconfig.build.json" }
    ]
}
